<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_gradient_black_r21">

    <TextView
            android:id="@+id/text_cancel_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="35dp"
            android:gravity="center"
            android:text="중간에 스위치를 켜면 꿈은 흐려집니다.\n그래도 켜시겠습니까?"
            android:textSize="15sp"
            android:textColor="#e3e3ec"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5b5d6b"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View
                android:id="@+id/view_cancel_sleep_line"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:background="#5b5d6b"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/text_cancel_sleep_yes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="네"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_cancel_sleep_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/text_cancel_sleep_no"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="아니오"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/view_cancel_sleep_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
