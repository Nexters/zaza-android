<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="alarm" type="com.teamnexters.zaza.ui.alarm.AlarmActivity"/>
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_alarm_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.alarm.AlarmActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_time_sleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <TextView
                android:id="@+id/tv_wake_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="25sp"
                app:layout_constraintRight_toLeftOf="@id/tv_wake_colon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_wake_colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="25sp"
                app:layout_constraintLeft_toRightOf="@id/tv_wake_hour"
                app:layout_constraintRight_toLeftOf="@id/tv_wake_minute"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_wake_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="25sp"
                app:layout_constraintLeft_toRightOf="@id/tv_wake_colon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view_time_wake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <TextView
                android:id="@+id/tv_sleep_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="25sp"
                app:layout_constraintRight_toLeftOf="@id/tv_sleep_colon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_sleep_colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="25sp"
                app:layout_constraintLeft_toRightOf="@id/tv_sleep_hour"
                app:layout_constraintRight_toLeftOf="@id/tv_sleep_minute"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tv_sleep_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01"
                android:textSize="25sp"
                app:layout_constraintLeft_toRightOf="@id/tv_sleep_colon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/view_time_sleep">

        <CheckBox
                android:id="@+id/btn_week_mon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="M"/>
        <CheckBox
                android:id="@+id/btn_week_tue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="T"/>
        <CheckBox
                android:id="@+id/btn_week_wed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="W"/>
        <CheckBox
                android:id="@+id/btn_week_thu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="T"/>
        <CheckBox
                android:id="@+id/btn_week_fri"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="F"/>

        <CheckBox
                android:id="@+id/btn_week_sat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="S"/>
        <CheckBox
                android:id="@+id/btn_week_sun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="false"
                android:text="S"/>

    </LinearLayout>

    <EditText
            android:id="@+id/et_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST TEST"
            android:inputType="none"
            app:layout_constraintBottom_toTopOf="@id/btn_alarm_edit"/>

    <Button
            android:id="@+id/btn_alarm_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알람 수정"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>